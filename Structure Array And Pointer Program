// Online C compiler to run C program online
#include <stdio.h>
#include <string.h>
struct student{
    int roll_no;
    char name[50];
    char branch[50];
    int batch;
};
struct student s[3],*ptr;
int main() {
    int i;
    ptr=&s[0];
    for(i=0;i<3;i++){
        printf("Enter Details Of Student %d",i+1);
        printf("\n");
        printf("Enter The Roll Number Of Student:");
        scanf("%d",&ptr->roll_no);
        printf("Enter The Name Of Student:");
        scanf("%s",&ptr->name);
        printf("Enter The Branch Of Student:");
        scanf("%s",&ptr->branch);
        printf("Enter The Batch Of Student:");
        scanf("%d",&ptr->batch);
        ptr++;
    }
    ptr=&s[0];
    for(i=0;i<3;i++){
        printf("Printing Details Of Student %d\n",i+1);
        printf("The Roll Number Is %d\n",ptr->roll_no);
        printf("The Name Is %s\n",ptr->name);
        printf("The Branch Is %s\n",ptr->branch);
        printf("The Batch Is %d\n",ptr->batch);
        ptr++;
    }
}
